@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro 	= #818181
rojo 		= #BD255B
gris_mas_claro = #f0f0f0

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0
a
	text-decoration none

img 
	vertical-align top
ul
	margin 0
	padding 0

.button-menu
	color red
	left .5em
	margin-top -10px
	position absolute
	top 50%
	transition 1s color
	&:hover
		color blue

.border-bottom
	border-bottom 1px solid gris_claro

.menu
	display none

.header
	height 3.5em
	
	.title 
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.container
	font-size 0
	padding 1.4rem
	text-align center

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin 0.5em 0

.name
	color gris_oscuro

.author
	color gris_claro

.playing
	&.small
		width 20em

.center-block
	margin 0 auto

.center-text
	text-align center

.relative 
	position relative

.actions
	background rgba(black, 0.3)
	bottom 0
	left 0
	position absolute
	right 0

.round
	border-radius 50%
	overflow hidden

.action
	color white
	font-size 1.2em
	margin-right .5em
	&.gray
		color gris_claro

	&:last-child
		margin-right 0
		
.wrap
	width 1000px
	
.padding 
	padding 1em

.padding-tb
	padding 1em 0

.right-text
	text-align right
.left
	float left
.right
	float right

.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		left 0
	.max
		right 0

	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto

	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%

	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em

.icon-search
	position absolute
	left .5em
	top .8em
	color gris_claro
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.playing
		&.medium 
			width auto
	.image
		img
			width 100%
			height auto

@media screen and (min-width:1000px)
	body 
		background gris_mas_claro
	.button-menu
		display none
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		.item
			float left
			list-style none
			a 
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				//amplio el area donde se puede hacer click
				padding 1em
				display block
				///////////////////////////
				//agrego este borde para evitar el error de 
				//que se mueva todo el menu
				border-top 5px solid transparent
				///////////////////
				&:hover
					border-top 5px solid gris_claro

	.header
		height auto		
		.title
			display none
	.isotipo
		width 122px
	.logo
		padding 1.3em 0
		overflow hidden
		background white
	.avatar
		width 38
		height 38

	//hace un triangulito en css
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			content ""
			display inline-block
			margin-left .4em

